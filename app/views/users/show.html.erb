<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
       <h3>Profile</h3>
       <p><%= @user.profile %></p>
       <h3>Area</h3>
       <p><%= @user.area %></p>
    </section>
  </aside>
</div>